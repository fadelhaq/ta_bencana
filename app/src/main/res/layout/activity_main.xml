<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F0E68C"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activites.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/black"
        android:layout_width="match_parent"
        android:backgroundTint="#FF4500"
        android:layout_height="45dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FFA500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BDBD Kabupaten Gorontalo"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/gbr1"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:text="LAPORKAN JIKA TERJADI BENCANA ALAM DIDAERAH ANDA "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btlapor"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Buat laporan"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btstatus"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="STATUS LAPORAN"
        android:backgroundTint="#F5F5DC"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"/>




</LinearLayout>